    function renderScene(sceneKey) {
        const scene = story[sceneKey];
        const textElement = document.getElementById('scene-text');
        const choiceElement = document.getElementById('choice-buttons');
        
        textElement.innerHTML = scene.text;
        choiceElement.innerHTML = '';

        if (scene.choices) {
            scene.choices.forEach(choice => {
                const btn = document.createElement('button');
                btn.innerText = choice.text;
                btn.onclick = () => renderScene(choice.next);
                choiceElement.appendChild(btn);
            });
        } else if (scene.next) {
            const btn = document.createElement('button');
            btn.innerText = "ç»§ç»­å‰è¿›...";
            btn.onclick = () => renderScene(scene.next);
            choiceElement.appendChild(btn);
        }
    }

    renderScene('start');
